import std::io

fn main -> none {
    let result = fib-rec 10 + fib-iter 10

    std::assert <| result == 110
}

fn fib-rec (n: int) -> int {
    match n < 2
    | true  => n
    | false => fib-rec (n - 1) + fib-rec (n - 2)
}

fn fib-iter (n: int) -> int {
    let mut a = 0
    let mut b = 1
    let mut i = 0

    loop {
        match i >= n
        | true  => break
        | false => none

        let tmp = a
        a = b
        b = tmp + b
        i = i + 1
    }

    a
}
